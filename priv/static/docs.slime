/! quotes API
article
  h4 = gettext.(current_locale, "Quotes API")

  - text = gettext.(current_locale, "The following methods are supported")
  p #{text}:
  ol
    = for {path, %{description: desc, params: params}} <- routes.quotes do
      li
        code = path
        code.comment = " - #{desc}"
      = unless params == [] do
        ul
          = for %{name: name, type: type, description: desc} <- params do
            li
              code.secondary = name
              code.comment
                = unless is_nil(desc) do
                  = " - #{desc}"
                = " [#{type}]"

  - text = gettext.(current_locale, "The next languages are available [quotes]")
  p #{text}:
  ol
    li
      code en
      = dash
      = gettext.(current_locale, "English")
    li
      code ru
      = dash
      = gettext.(current_locale, "Russian")

  - text = gettext.(current_locale, "The default language is English")
  p #{text}.

